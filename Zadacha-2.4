import java.util.Scanner;

public class Rekolta {
   public static void main(String[] arguments){
       Scanner in = new Scanner(System.in);
       
       System.out.print("Vavedi ploshta na lozeto: ");
       int plosht = Integer.parseInt(in.nextLine());
       System.out.print("Vavedi izkaranite kg grozde ot 1 kv. m.: ");
       double kgGrozde = Double.parseDouble(in.nextLine());
       System.out.print("Vavedi jelani litri vino: ");
       int litraVino = Integer.parseInt(in.nextLine());
       System.out.print("Rabotnici- ");
       int rabotnici = Integer.parseInt(in.nextLine());
       
       double grozde = plosht*0.4;
       double lVino = (grozde*kgGrozde)/2.5;
       
        if(lVino<litraVino){
           System.out.printf("It will be a tough winter! More %.0f liters "
                   + "wine needed.", Math.floor(litraVino - lVino));
           System.out.println();
       }
       else{
           System.out.printf("Good harvest this year! Total wine: %.0f liters.",
                   Math.floor(lVino));
           System.out.printf("%.0f liters left -> %.0f liters per person.",
                   Math.ceil(lVino - litraVino), 
                   Math.ceil((lVino - litraVino)/rabotnici));
       }
   } 
}
